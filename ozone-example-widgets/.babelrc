{

  "presets": [
    "@babel/react",
    "@babel/typescript",
    [
      "@babel/env",
      {
        "debug": true,
        "modules": false,
        "useBuiltIns": "entry"
      }
    ]
  ],

  "plugins": [
    "react-hot-loader/babel",
    "@babel/plugin-proposal-object-rest-spread",
    "@babel/plugin-proposal-class-properties"
  ],

  "env": {
    "test": {
      "presets": [
        "@babel/react",
        "@babel/typescript",
        [
          "@babel/env",
          {
            "modules": "commonjs"
          }
        ]
      ],
      "plugins": [
        "@babel/plugin-transform-modules-commonjs"
      ]
    }
  }

}
