{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../build",
    "sourceRoot": ".",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6"
  }
}
