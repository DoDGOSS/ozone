<!DOCTYPE html>
<%@ page contentType="text/html;charset=UTF-8" %>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="${request.contextPath}/static/favicon.ico">
    <title>Ozone Platform</title>
{{#each stylesheets as |stylesheet|}}
    <link rel="stylesheet" type="text/css" href="${request.contextPath}/static/{{{stylesheet}}}">
{{/each}}
</head>
<body>
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <div id="root"></div>

    <script type="application/javascript">
        window.env = window.env || {};
        window.env.server = {
            url: '${grailsApplication.config.getProperty("owf.server.url")}',
            contextPath: "${request.contextPath}",
            staticAssetPath: '${grailsApplication.config.getProperty("owf.server.staticAssetPath")}'
        };
        window.env.login = {
            isEnabled: ${grailsApplication.config.getProperty("owf.login.enabled")},
            loginUrl: '${grailsApplication.config.getProperty("owf.login.url")}'
        };
        window.env.logout = {
            isEnabled: ${grailsApplication.config.getProperty("owf.logout.enabled")},
            logoutUrl: '${grailsApplication.config.getProperty("owf.logout.url")}'
        };
        window.env.autoSaveInterval = ${grailsApplication.config.getProperty("owf.autoSaveInterval")};
    </script>

{{#each scripts as |script|}}
    <script type="application/javascript" src="${request.contextPath}/static/{{{script}}}"></script>
{{/each}}
</body>
</html>
